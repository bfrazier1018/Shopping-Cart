<!DOCTYPE html>
<html>
<head>
	<!-- Head -->
	<%- include('../partials/head.ejs') %>
	<title>Shopping Cart | Edit Page</title>
</head>
<body>
	<!-- Admin Navbar -->
	<%- include('../partials/adminNavBar.ejs') %> 
	
	<div class="container">
		<h2 class="page-title">Edit Page</h2>
		<a href="/admin/pages" class="btn btn-secondary">All Pages</a>
		<br><br>

		<!-- Add Page Form -->
		<form action="/admin/pages/edit-page/<%= slug %>" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="title" value="<%= title %>" placeholder="Title">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="slug" value="<%= slug %>" placeholder="Slug">
			</div>
			<div class="form-group">
				<textarea class="form-control" id="ta" name="content" cols="30" rows="10"><%= content %></textarea> 
			</div>
			<input type="hidden" name="id" value="<%= id %>">
			<!-- Submit Button -->
			<button type="submit" class="btn btn-primary">Update</button>
		</form>
	</div>

	<!-- Footer -->
    <%- include('../partials/footer.ejs') %>

	<!-- Scripts -->
    <%- include('../partials/scripts.ejs') %>
</body>
</html>