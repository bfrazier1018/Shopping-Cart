<!DOCTYPE html>
<html>
<head>
	<!-- Head -->
	<%- include('../partials/head.ejs') %>
	<title>Shopping Cart | Add Category</title>
</head>
<body>
	<!-- Admin Navbar -->
	<%- include('../partials/adminNavBar.ejs') %> 
	
	<div class="container">
		<h2 class="page-title">Add a Category</h2>
		<a href="/admin/categories" class="btn btn-secondary">All Categories</a>
		<br><br>

		<!-- Add Category Form -->
		<form autocomplete="off" action="/admin/categories/add-category" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="title" value="<%= title %>" placeholder="Title">
			</div>
			<!-- Submit Button -->
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>

	<!-- Footer -->
    <%- include('../partials/footer.ejs') %>

	<!-- Scripts -->
    <%- include('../partials/scripts.ejs') %>
</body>
</html>