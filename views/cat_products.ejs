<!DOCTYPE html>
<html>
<head>
	<!-- Head -->
	<% include partials/head.ejs %>
	<title>Shopping Cart <%= title %></title>
</head>
<body>
	<!-- Navbar -->
	<% include partials/navbar.ejs %> 

	<div class="row products">
		<% products.forEach(function(product) { %>
			<div class="col-xs-12 col-md-4 p">
				<a class="pa" href="/products/<%= product.category %>/<%= product.slug %>">
					<img class="pimage" src="/product_images/<%= product.id %>/<%= product.image %>" alt="" >
				</a>
				<h3><%= product.title %></h3>
				<h4>$<%= parseFloat(product.price).toFixed(2) %></h4>
				<a class="vd" href="/products/<%= product.category %>/<%= product.slug %>">View Details</a>
			</div>
		<% });%>
	</div>

	<!-- Footer -->
	<% include partials/footer.ejs %>
	
	<!-- Scripts -->
    <% include partials/scripts.ejs %>
</body>
</html>